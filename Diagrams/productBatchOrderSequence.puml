@startuml

actor api
boundary productBatch.routes as routes
control productBatch.controller as controller

activate api
api -> routes: GET /productBatch/order?orderBy=PrecioVenta&direction=ASC

activate routes
routes -> controller: orderPb(req, res)
deactivate routes

activate controller
create entity ProductBatch as pb
controller -> pb: ProductBatch.fetchAllWithOrder(orderBy, direction)

database db

activate pb
pb ->> db: SELECT ... ORDER BY PrecioVenta ASC
activate db
db -->> pb: resultados ordenados
pb -->> controller: Array de lotes
deactivate pb

controller -->> routes: res.status(200).json(result)
deactivate controller

activate routes
routes -> api: response.status(200)
deactivate routes
deactivate api

@enduml
